body
    display flex
    justify-content center
    align-items center
    background-color #111
    margin 0
    height 100vh

.deck
    display flex
    flex-wrap wrap
    justify-content center
    width 80%
    gap 14px

.card
    width 105px
    height 150px
    position relative
    perspective 1000px
    cursor pointer
    box-shadow 4px 10px 18px rgba(0,0,0,0.3)
    border-radius 10px
    overflow hidden
    transform-style preserve-3d
    transition transform 0.6s
    &:hover
        transform translateY(-10px)
        box-shadow 4px 15px 25px rgba(0,0,0,0.5)
    &::before
        background-color #1e1e1e
        background-image linear-gradient(45deg, #444 25%, transparent 25%, transparent 75%, #444 75%, #444), linear-gradient(45deg, #444 25%, transparent 25%, transparent 75%, #444 75%, #444)
        background-size 20px 20px
        background-position 0 0, 10px 10px
    &::after
        background-color #fff
        transform rotateY(180deg)
    &.flipped
        &::before
            transform rotateY(180deg)
        &::after
            transform rotateY(360deg)

.card::before,
.card::after
    content ''
    position absolute
    width 100%
    height 100%
    backface-visibility hidden
    border-radius 10px
    transition transform 0.6s
    display flex
    justify-content center
    align-items center
    font-size 1.5em
    color #dadada

.card[data-suit='hearts']::after
    color #f00
    content attr(data-value) ' ♥'

.card[data-suit='spades']::after
    color #000
    content attr(data-value) ' ♠'

.card[data-suit='diamonds']::after
    color #f00
    content attr(data-value) ' ♦'

.card[data-suit='clubs']::after
    color #000
    content attr(data-value) ' ♣'

.controls
    display flex
    flex-direction column
    align-items center
    gap 20px
    margin-top 20px

button
    background-color #444
    color #fff
    border none
    padding 10px 20px
    cursor pointer
    font-size 1em
    border-radius 5px
    transition background-color 0.3s
    &:hover
        background-color #555
    &:focus
        outline none
